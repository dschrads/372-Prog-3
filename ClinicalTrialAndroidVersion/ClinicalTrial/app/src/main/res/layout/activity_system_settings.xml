<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SystemSettingsActivity">

    <Switch
        android:id="@+id/switchXMLAddReadings"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchXMLAddPatientes" />

    <TextView
        android:id="@+id/textViewXMLAddReadings"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:text="Add readings from unknown patients "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewXMLAddPAtients" />

    <Switch
        android:id="@+id/switchXMLAddPatientes"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="148dp"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchJasonAddReadings" />

    <TextView
        android:id="@+id/textViewXMLHeader"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="260dp"
        android:text="When importing XML files:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchJasonAddReadings"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchJasonAddPatients" />

    <TextView
        android:id="@+id/textViewJasonAddReadings"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:text="Add readings from unknown patients "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewJasonAddPatient" />

    <TextView
        android:id="@+id/textViewJASONHeader"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="36dp"
        android:text="When importing JASON files:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewJasonAddPatient"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:text="Add patients to the trail "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewJASONHeader" />

    <TextView
        android:id="@+id/textViewXMLAddPAtients"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:text="Add patients to the trail "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewXMLHeader" />

    <Switch
        android:id="@+id/switchJasonAddPatients"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="96dp"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>